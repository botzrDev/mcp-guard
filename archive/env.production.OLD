# GitHub OAuth Credentials for Production
# These should be set via environment variables in your deployment platform (e.g., Railway, Fly.io)
MCP_GUARD_AUTH_OAUTH_CLIENT_ID=your-production-github-client-id
MCP_GUARD_AUTH_OAUTH_CLIENT_SECRET=your-production-github-secret

# IMPORTANT: Must match your production frontend domain
MCP_GUARD_AUTH_OAUTH_REDIRECT_URI=https://mcpg.botzr.com/auth/callback

# Database
MCP_GUARD_DATABASE_URL=postgresql://user:password@host:5432/mcp_guard

# Stripe (if using billing)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxx

# Google OAuth (if configured)
# MCP_GUARD_AUTH_OAUTH_GOOGLE_CLIENT_ID=your-production-google-client-id
# MCP_GUARD_AUTH_OAUTH_GOOGLE_CLIENT_SECRET=your-production-google-secret

# Magic Link (if implemented)
# MAGIC_LINK_SECRET=your-production-secret-key-minimum-32-characters
# RESEND_API_KEY=re_xxxxxxxxxxxx
